%h1
  Create a delayed job
= form_tag(controller: 'custom_jobs', action: 'create', method: 'post') do
  = label_tag 'name'
  = text_field_tag 'name'
  = label_tag 'delay'
  = text_field_tag 'delay'
  = label_tag 'message'
  = text_field_tag 'message'
  = submit_tag "Create this delayed job"
%p
  To create a job that will raise an error on processing please specify message text of 'ERROR'

= link_to 'Jobs list', delayed_job_admin.jobs_path
